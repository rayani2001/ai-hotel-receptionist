# AI Hotel Receptionist - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== APPLICATION ====================
APP_NAME=AI Hotel Receptionist
DEBUG=False

# ==================== HOTEL INFORMATION ====================
HOTEL_NAME=Grand Plaza Hotel
HOTEL_ADDRESS=123 Main Street, City, Country
HOTEL_PHONE=+1-234-567-8900
HOTEL_EMAIL=info@grandplaza.com

# ==================== AI PROVIDER ====================
# Choose: "openai" or "anthropic"
AI_PROVIDER=openai

# API Keys (get from respective providers)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==================== DATABASE ====================
# SQLite (default for development)
DATABASE_URL=sqlite:///./hotel_receptionist.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/hotel_db

# ==================== SECURITY ====================
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== FEATURES ====================
ENABLE_VOICE=true
SPEECH_LANGUAGE=en-IN
TTS_PROVIDER=gtts

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================== RATE LIMITING ====================
RATE_LIMIT_PER_MINUTE=60
